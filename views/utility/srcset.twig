{% if id %}

  {% set img = TimberImage(id) %}

  <img
    sizes="auto"
    src="{{img.src('medium')}}"
    srcset="
        {{img.src('thumbnail')}} 300w,
        {{img.src('medium')}} 600w,
        {% if size != thumb %}{{img.src('large')}} 900w{% endif %}"
    {{class ? 'class="' ~ class ~ '"'}} />

{% endif %}
