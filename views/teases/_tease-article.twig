{% extends "teases/tease.twig" %}

{% block tease_content %}
	<h4><a href="{{post.link}}">{{post.post_title}}</a></h4>
	{% include 'partials/connected-source.twig' %}
	<p>{{post.header_tagline}}</p>
	<a href="{{post.link}}" class="btn--readmore">
		<span class="contain-flex">
			<span>Read more</span> {% include 'utility/svg.twig' with { file : 'arrow-right', prefix : 'icon' } %}
		</span>
	</a>
{% endblock %}