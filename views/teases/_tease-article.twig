{% extends "teases/tease.twig" %}

{% block after_tease_header %}

  {% set item = TimberPost(post.get_field('connected_source')) %}

    <p class="teaser-meta">

        {{ item.source_author ? 'By ' ~ item.source_author }}

        {% if item.source_publication %}
            {% if item.source_author %} for {% else %} Originally published in {% endif %}
            <a href="{{item.source_url}}"><cite>{{item.source_publication}}</cite></a>
        {% endif %}

        {% if item.source_date %}
            {% if ( item.source_publication or item.source_author ) %} on {% endif %}
            <time datetime="{{ item.source_date|date('Y-m-d') }}">{{ item.source_date ? item.source_date|date('F j, Y') }}</time>
        {% endif %}
    </p>

{% endblock %}
