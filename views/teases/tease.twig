<article class="tease -{{post.post_type}}" id="tease-{{post.ID}}">


  {% block tease_header %}
    <h3 class="tease-title -{{post.post_type}}"><a href="{{post.link}}">{{post.post_title}}</a><span class="tease-more">&rsaquo;</span></h3>
  {% endblock %}

  {% block after_tease_header %}{% endblock %}

  {% include 'utility/edit-link.twig' %}

  {% block tease_content %}
    <p>{{post.header_summary ? post.header_summary : post.header_tagline }}</p>
  {% endblock %}

  {% block tease_footer %}
	{% endblock %}
</article>
