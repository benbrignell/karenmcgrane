{% extends "base.twig" %}

{% block before_content %}
	{% include 'headers/_header-single.twig' %}
{% endblock %}

{% block content %}

	{% for block in post.get_field('blocks') %}
		{% include 'blocks/block-logic.twig' %}
	{% endfor %}

{% endblock %}

{% block after_content %}

	{% if post.citations %}
		<h4>Citations</h4>
		<ul class="single-citations">
			{% for item in post.get_field('citations') %}
				{% set item = TimberPost(item) %}
				<li class="citations-list">
					<a href="{{item.source_url}}">{{item.title}}</a>
					{{item.source_author ? 'By ' ~ item.source_author}}
					{{item.source_publication ? item.source_publication}}
					{{item.source_date ? item.source_date|date('| F j, Y')}}
				</li>
			{% endfor %}
		</ul>
	{% endif %}

{% endblock %}
