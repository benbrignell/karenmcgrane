
{# Base header template #}

{% set h_class = ' class="' ~ class ~ '"' %}
{% set h_role = ' role="' ~ role ~ '"' %}

<header{{ class ? h_class }}{{role ? h_role }}>

	{% block before_header_content %}

	{% endblock %}

	{% block header_content %}

		{% set display = post.header_display %}

		<h1 class="title-page">{{post.post_title}}</h1>

		{% if display == 'image' %}

			{{post.header_image_desktop}}
			{{post.header_image_tablet}}
			{{post.header_image_mobile}}

		{% endif %}

		<p class="lead">{{post.header_tagline}}</p>
		<p class="summary">{{post.header_summary}}</p>

	{% endblock %}

	{% block after_header_content %}{% endblock %}

</header>
