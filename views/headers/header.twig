
{# Base header template #}

{% set h_class = ' class="' ~ class ~ '"' %}
{% set h_role = ' role="' ~ role ~ '"' %}

<header{{ class ? h_class }}{{role ? h_role }}>

	{% block before_header_content %}
	  {% set display = post.header_display %}

	  {% if display == 'image' %}
	    <div class="header-image-wrap">
	      <div class="contain-lg">
	      	{% include 'utility/srcset.twig' with { id: post.header_image, class: "header-image" } %}
	      </div>
	    </div>
	  {% endif %}

	{% endblock %}

	{% block header_content %}
		<div class="contain-lg">
			<div class="inner">
				<h1 class="header-title">{{post.post_title}}</h1>
				{% include 'partials/connected-source.twig'%}
			</div>
		</div>
	{% endblock %}

	{% block after_header_content %}{% endblock %}

</header>
